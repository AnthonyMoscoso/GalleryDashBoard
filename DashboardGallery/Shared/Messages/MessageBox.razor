
<Modal @ref="modalRef" Class="custom-modal-content" Style="@StyleModelContent">
   
        <div class="custom-modal-container" >
            <div class="custom-modal-header">
                <img class="modal-img" src="@_messageBoxConfig.ImageUrl" />
            </div>
            <div class="custom-modal-body">
                <div>
                    <h2 class="custom-modal-tittle" style="--tittleColor:@_messageBoxConfig.TitleColor">@_title</h2>
                </div>
                <div class="custom-modal-body-content">
                    <p class="custom-modal-message" style="--textColor:@_messageBoxConfig.TextColor">@_message</p>
                </div>
            </div>
            <div class="custom-modal-footer align-content-center">
                <button class="custom-modal-button" style="@ButtonStyle" @onclick="OnButtonClicked">@_buttonMessage</button>
            </div>
        </div>
 </Modal>